<?xml version="1.0" encoding="UTF-8"?>
<tns:Pattern xmlns:tns="http://www.example.org/dirigent-pattern/"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.example.org/dirigent-pattern/ ../dirigent-pattern.xsd ">
	<Documentation>Pattern for performing unit test on FileExecutor.</Documentation>
	<PatternStep name="TestAppend" type="File">
		<Parameter name="fileName" value="test/Append.txt" />
		<Parameter name="mode" value="append" />
		<Template> This text was appended by Dirigent. </Template>
	</PatternStep>
	<PatternStep name="TestOverwrite" type="File">
		<Parameter name="fileName" value="test/Overwrite.txt" />
		<Parameter name="mode" value="overwrite" />
		<Template> This text was appended by Dirigent. </Template>
	</PatternStep>
	<PatternStep name="TestCreate" type="File">
		<Parameter name="fileName" value="test/Create.txt" />
		<Parameter name="mode" value="create" />
		<Template> This text was generated by Dirigent. </Template>
	</PatternStep>
		<PatternStep name="TestConfig" type="File">
		<Parameter name="fileName" value="test/Config.txt" />
		<Parameter name="mode" value="overwrite" />
		<Template> dirigent.model.path=${config.getProperty("dirigent.model.path")} </Template>
	</PatternStep>
</tns:Pattern>